<h1 class="center">Create A New List</h1>

<div class="row col-sm-4 col-sm-offset-4">
  <% if @list.errors.presence %>
    <ul class="alert alert-warning" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <% @list.errors.each do |error, message| %>
        <li>
          <%= "#{error.capitalize} #{message}" %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>



<div class="form-horizontal">
  <div class="col-sm-8 col-sm-offset-2">
    <%= form_for @list do |f| %>
      
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Name of List", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :duedate %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :duedate, class: "form-control", placeholder: "Duedate of List" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :note %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :note, row: 10, class: "form-control", placeholder: "Note of List" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.submit class: "btn btn-success" %>
          </div>
        </div>
      
    <% end %>
  </div>
</div>