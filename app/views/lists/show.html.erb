<h1 class="center">Show Details of List</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well sh-well">
      <% if @list.duedate < Time.now %>
        <div class="list-title col-md-12">
          <%= @list.name.capitalize %>
        </div>
        
        <div class="list-note col-md-12">
          <%= simple_format(@list.note) %>
        </div>
        <hr>
        <div class="date-action">
          <%= link_to 'Back', lists_path %>
        </div>
      <% else %>
        <div class="list-title col-md-12">
          <%= @list.name.capitalize %>
        </div>
        
        <div class="list-note col-md-12">
          <%= simple_format(@list.note) %>
        </div>
        <hr>
        <div class="todo_items_wrapper">
          <%= render @list.todo_items %>
          <div class="form" %>
            <%= render 'todo_items/item_form' %>
          </div>
        </div>
        <hr>
        <div class="list-action">
          <%= link_to 'Back', lists_path %> |
          <%= link_to 'Edit', edit_list_path(@list) %> |
          <%= link_to 'Delete', list_path(@list), method: :delete,
                                data: { confirm: "Are you sure?"} %>
        </div>
        <div class="list-duedate pull-right">
          <%= @list.duedate %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>