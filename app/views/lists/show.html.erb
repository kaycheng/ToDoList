<h1 class="center">Show Details of List</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <div class="list-title col-md-3">
        <%= @list.name.capitalize %>
      </div>
      <div class="list-duedate pull-right col-md-3">
        <%= @list.duedate %>
      </div>
      <hr>
      <div class="list-note">
        <%= simple_format(@list.note) %>
      </div>
      <div class="todo_items_wrapper">
        <%= render @list.todo_items %>
        <div class="form" %>
          <%= render 'todo_items/item_form' %>
        </div>
      </div>
      <hr>
      <div class="list-action">
          <button type="button" class="btn btn-success">
            <%= link_to 'Back to Homepage', lists_path %>
          </button>
      </div>
      
    </div>
  </div>
</div>