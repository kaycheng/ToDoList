<div class="row clearfix">
  <table class="table">
    <% if todo_item.completed_at? %>
      <div class="complete col-md-2">
        <%= link_to complete_list_todo_item_path(@list, todo_item.id),
                        method: :patch do %>
          <i style="opacity: 0.5;" class="fa fa-check"></i>
        <% end %>
                          
      </div>
      <div class="todo_item col-md-4">
        <p style="opacity: 0.5;"><strike><%= todo_item.content %></strike></p>
      </div>
      <div class="trash col-md-2">
        <%= link_to list_todo_item_path(@list, todo_item.id),
                      method: :delete, data: { confirm: "Are you sure?"} do %>
          <i class="fa fa-trash-o"></i>
        <% end %>
      </div>
    <% else %>
      <div class="complete col-md-2">
        <%= link_to complete_list_todo_item_path(@list, todo_item.id),
                        method: :patch do %>
          <i class="fa fa-check"></i>
        <% end %>
      </div>
      <div class="todo_item col-md-4">
        <p><%= todo_item.content %></p>
      </div>
      <div class="trash col-md-2">
        <%= link_to list_todo_item_path(@list, todo_item.id),
                      method: :delete, data: { confirm: "Are you sure?"} do %>
          <i class="fa fa-trash-o"></i>
        <% end %>
      </div>
    <% end %>
  </table>
</div>